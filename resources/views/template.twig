<!doctype html>
<html lang="en">
<head>
    <title>{% if block('title') %}{{ block('title') }} ~ {% endif %}{{ appName }}</title>
    <link rel="stylesheet" href="/assets/css/style.css" />
</head>
<body class="{{ block('section') }}">
    <header>
        <div>
            <h1><a href="/">{{ appName }}</a></h1>
            <nav>
                <ul>
                    <li><form method="get" action="/"><input type="text" name="q" value="{{ query }}" placeholder="Search for a part" /></form></li>
                    {% if isAuthenticated %}
                        <li class="button"><a href="/admin/add-part">+</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </header>
    {% if extension %}
        <a class="extension-nag" href="{{ extension }}" target="_blank">
            Install the extension to search {{ appName }} on Mouser and Digikey
        </a>
    {% endif %}
    <section class="content">
        {{ block('content') }}
    </section>
    <footer>
        Generated by <a href="https://github.com/tylermenezes/PartsAt">PartsAt</a>.
        {% if not isAuthenticated %}<a href="/admin/login">Admin?</a>{% endif %}
    </footer>
</body>
</html>
